{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "jsx": "preserve", // ✅ 이거 꼭 있어야 해!
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ], // ✅ DOM 관련 타입을 불러오기 위해 필요
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
